{
  "name": "agentworks",
  "version": "0.1.0",
  "private": true,
  "description": "Agent-native Kanban platform for AI-powered development",
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "db:generate": "pnpm --filter @agentworks/db generate",
    "db:push": "pnpm --filter @agentworks/db push",
    "db:migrate": "pnpm --filter @agentworks/db migrate",
    "db:studio": "pnpm --filter @agentworks/db studio",
    "test": "jest",
    "test:unit": "jest --selectProjects core-service agent-orchestrator provider-router log-streaming billing-service web",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e --runInBand",
    "test:performance": "jest --selectProjects performance --runInBand",
    "test:security": "jest --selectProjects security --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration-ci": "tsx test-integration.ts"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.2",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    "identity-obj-proxy": "^3.0.0",
    "msw": "^2.6.4",
    "puppeteer": "^23.8.0",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "pino-pretty": "^13.1.3"
  }
}